// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  accounts Account[]
  sessions Session[]

  // Project relations
  ownedProjects   Project[]           @relation("ProjectOwner")
  projectMembers  ProjectMember[]
  sentInvitations ProjectInvitation[] @relation("InvitedBy")

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  @@map(name: "users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

// App Roles - Unified roles for all projects
model AppRole {
  id          String   @id @default(cuid())
  name        String   @unique
  priority    Int      @unique // 0 = highest permissions, higher = less permissions
  description String?
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @updatedAt @map(name: "updated_at")

  projectMembers        ProjectMember[]
  invitations           ProjectInvitation[]
  roleActionPermissions RoleActionPermission[]

  @@index([priority])
  @@map(name: "app_roles")
}

// Actions - Available actions in the application
model Action {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  category    String
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @updatedAt @map(name: "updated_at")

  roleActionPermissions RoleActionPermission[]
  planActionPermissions PlanActionPermission[]

  @@index([category])
  @@index([slug])
  @@map(name: "actions")
}

// Subscription Plans - Stored in DB
model SubscriptionPlan {
  id                   String   @id @default(cuid())
  name                 String   @unique
  displayName          String   @map(name: "display_name")
  description          String?
  stripePriceIdMonthly String?  @map(name: "stripe_price_id_monthly")
  stripePriceIdYearly  String?  @map(name: "stripe_price_id_yearly")
  isActive             Boolean  @default(true) @map(name: "is_active")
  createdAt            DateTime @default(now()) @map(name: "created_at")
  updatedAt            DateTime @updatedAt @map(name: "updated_at")

  projects              Project[]
  planActionPermissions PlanActionPermission[]
  roleActionPermissions RoleActionPermission[]

  @@index([name])
  @@map(name: "subscription_plans")
}

// Plan Action Permissions - What actions are available in each plan
model PlanActionPermission {
  id        String   @id @default(cuid())
  planId    String   @map(name: "plan_id")
  actionId  String   @map(name: "action_id")
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  plan   SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  action Action           @relation(fields: [actionId], references: [id], onDelete: Cascade)

  @@unique([planId, actionId])
  @@index([planId])
  @@index([actionId])
  @@map(name: "plan_action_permissions")
}

// Role Action Permissions - What actions each role can perform in each plan
model RoleActionPermission {
  id        String   @id @default(cuid())
  planId    String   @map(name: "plan_id")
  roleId    String   @map(name: "role_id")
  actionId  String   @map(name: "action_id")
  allowed   Boolean  @default(true)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  plan   SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  role   AppRole          @relation(fields: [roleId], references: [id], onDelete: Cascade)
  action Action           @relation(fields: [actionId], references: [id], onDelete: Cascade)

  @@unique([planId, roleId, actionId])
  @@index([planId, roleId])
  @@index([actionId])
  @@map(name: "role_action_permissions")
}

model Project {
  id          String              @id @default(cuid())
  name        String
  createdAt   DateTime            @default(now()) @map(name: "created_at")
  updatedAt   DateTime            @updatedAt @map(name: "updated_at")
  ownerId     String              @map(name: "owner_id")
  owner       User                @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     ProjectMember[]
  invitations ProjectInvitation[]

  // Subscription plan relation
  subscriptionPlanId String?           @map(name: "subscription_plan_id")
  subscriptionPlan   SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id], onDelete: SetNull)

  @@index([ownerId])
  @@index([subscriptionPlanId])
  @@map(name: "projects")
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String   @map(name: "project_id")
  userId    String   @map(name: "user_id")
  roleId    String   @map(name: "role_id")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  role    AppRole @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@index([roleId])
  @@map(name: "project_members")
}

model ProjectInvitation {
  id          String   @id @default(cuid())
  projectId   String   @map(name: "project_id")
  email       String
  roleId      String   @map(name: "role_id")
  invitedById String   @map(name: "invited_by_id")
  token       String   @unique
  createdAt   DateTime @default(now()) @map(name: "created_at")
  expiresAt   DateTime @map(name: "expires_at")

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  invitedBy User    @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  role      AppRole @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@index([projectId])
  @@index([email])
  @@index([token])
  @@index([roleId])
  @@map(name: "project_invitations")
}
